<div class="jumbotron fol-style">
	<h2>Followers</h2>
	<% if @followers.count > 0 %>
	    <% @followers.each do |follower| %>
	    	<div class="follower row">
	    	<div class="avatar">
			  	<%= image_tag follower.avatar.url(:thumb), class: "img-circle", style: "margin-right: 30px" %>
	    	</div>
	    	<div class="follow-info">
	    		<h3>
	    			<%= link_to follower.fullname, "/users/#{follower.id}" %>
	    		</h3>
	    		<h4><%= follower.username %></h4>
	    	</div>
	    </div>
	    <% end -%>
	<% else %>
	    <p>Sorry you do not have any followers at this time.</p>
	<% end %>
</div>
	